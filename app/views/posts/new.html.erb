<h1>New Post</h1>

<%= form_for(@post) do |f| %>

	<%= f.label :post1_image %>
	<%= f.attachment_field :post1_image %>

	<%= f.label :post2_image %>
	<%= f.attachment_field :post2_image %>

	<%= f.label :search_item %>
	<%= text_field_tag :post_search_item, '', :placeholder =>  "ボードゲーム名を入力" %>


    <%= f.label :post_body %>
    <%= f.text_area :post_body %>

    <%= f.submit '保存' %>

<% end %>


<%= link_to 'Back', posts_path %>
