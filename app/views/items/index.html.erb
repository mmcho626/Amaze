<div class="contents">

    <div class="title">


        <% @items.each do |item| %>


            <% if admin_signed_in? %> <!-- 管理者ログイン時 -->


                <%= link_to admins_item_path(item) do %>

                    <!-------------------- ボードゲーム一覧 -------------------->
                    <%= render partial: 'items', locals: { item: item } %>

                <% end %>


            <% else %> <!-- 管理者ログアウト時 -->


                <%= link_to item_path(item) do %>

                    <!-------------------- ボードゲーム一覧 -------------------->
                    <%= render partial: 'items', locals: { item: item } %>

                <% end %>


            <% end %>


        <% end %>

    </div>

</div>