<p id="notice"><%= notice %></p>

<% if admin_signed_in? %>

  <%= link_to '編集する', edit_admin_item_path(item) %>

<% else %>

  <!-- 商品画像 -->
  <%= @item.item_image_id %>

  <!-- 商品名 -->
  <%= @item.item_name %>

  <!-- 商品のカテゴリ -->
  <!-- <= @item.item_category.item_category_name > -->

  <!-- 商品のプレイ時間 -->
  <!-- <= @item.item_time.item_time > -->

  <!-- 商品のプレイ人数 -->
  <!-- <= @item.item_person.item_person > -->

  <!-- 商品紹介文 -->
  <%= @item.item_body %>


  <!-- 商品の口コミ一覧 -->

  <h2>この商品の口コミ一覧</h2>

  <% @posts.each do |item_post| %>


    <%= link_to user_path(item_post.user) do %>

      <%= attachment_image_tag item_post.user, :user_image, fallback: "no_image.jpg", size: "50x50" %>

      <%= item_post.user.name %>

    <% end %>


    <%= link_to post_path(item_post) do %>

      <%= attachment_image_tag item_post, :post1_image, fallback:"no_image.jpg", size: "165x165" %>

      <%= attachment_image_tag item_post, :post2_image, fallback:"no_image.jpg", size: "165x165" %>

      <%= item_post.post_body %>

    <% end %>

    <%= time_ago_in_words(item_post.created_at) %>前
      <!-- ViewHelper の time_ago_in_words 使用 -->

  <% end %>


<% end %>
