<h1>ユーザー一覧画面</h1>

<% @users.each do |user| %>

  <%= link_to user_path(user.id) do %>

    <%= attachment_image_tag user, :user_image, fallback:"no_image.jpg", size: "60x60" %>

    <%= user.name %>

    <%= user.user_introduction %>

  <% end %>

  <% if user_signed_in? %>

    <% if user != current_user %>

        <% if current_user.following?(user) %>

            <%= link_to 'フォロー解除', unfollows_path(user.id), method: :POST %>

        <% else %>

            <%= link_to 'フォローする', follows_path(user.id), method: :POST %>

        <% end %>

    <% end %>


  <% elsif %>

    <%= link_to 'フォローする', new_user_session_path %>

  <% end %>

  <%= user.followed.count %>

<% end %>
