
<%= form_for(@user) do |f| %>

	<%= f.label :user_image %>
	<%= f.attachment_field :user_image %>

	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :sex %>
	<%= f.select :sex, User.sexes.keys.to_a, {} %>

	<%= f.label :age_id %>
	<%= f.collection_select :age_id, Age.all, :id, :age, :prompt => '未選択' %>

	<%= f.label :user_introduction %>
	<%= f.text_area :user_introduction %>

<% end %>