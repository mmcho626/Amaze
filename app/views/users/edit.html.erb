
<%= form_for(@user) do |f| %>

	<%= f.label :user_image %>
	<%= f.attachment_field :user_image %>

	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :sex %>
	<%= f.select :sex, User.sexes.keys.to_a, {} %>

	<%= f.label :age %>
	<%= f.select :age, User.ages.keys.to_a, {} %>

	<%= f.label :user_introduction %>
	<%= f.text_area :user_introduction %>

	<%= f.submit '保存' %>

<% end %>