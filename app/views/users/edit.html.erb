
<div class="contents">


	<div class="title">

		<h2>ユーザ情報の編集</h2>

	</div>

	<div class="sign-contents">

		<%= form_for(@user) do |f| %>

		    <div class="field user-edit-form">
				<%= f.label :user_image %>
				<%= f.attachment_field :user_image %>
			</div>

		    <div class="field user-edit-form">
				<%= f.label :name %>
				<%= f.text_field :name, :class=>"sign-form" %>
		    </div>

		    <!-- email  -->
		    <div class="field user-edit-form">
				<%= f.label :email %>
				<%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"sign-form" %>
		    </div>


		    <div class="field user-edit-form">
				<%= f.label :sex %>
				<%= f.select :sex, User.sexes.keys.to_a, {}, :class=>"form-select" %>
			</div>

		    <div class="field user-edit-form">
				<%= f.label :age %>
				<%= f.select :age, User.ages.keys.to_a, {}, :class=>"form-select" %>
			</div>


		    <!-- パスワード -->
		    <div class="field user-edit-form">
				<%= f.label :password %><br />
				<%= f.password_field :password, autocomplete: "current-password", :class=>"sign-form" %>
		    </div>


		    <div class="field user-edit-form">
				<%= f.label :password_confirmation %><br />
				<%= f.password_field :password_confirmation, autocomplete: "new-password", :class=>"sign-form" %>
		    </div>


			<%= f.label :user_introduction %>
			<%= f.text_area :user_introduction, :class=>"introduction-form" %>

		    <div class="actions user-update">
		      <%= f.submit "更新", :class=>"sign-btn" %>
		    </div>

		<% end %>

	</div>

</div>
