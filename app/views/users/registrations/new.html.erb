<div class= "sign">


  <h2 class= "signup">Sign up</h2>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>


    <!-- ユーザ名入力部分 -->
    <div class="field">
      <%= f.label :name %><br />
     <%= f.text_field :name, autofocus: true, :class=>"sign-form" %>


    <!-- email入力部分 -->
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"sign-form" %>
    </div>

    <!-- パスワード入力部分 -->
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" , :class=>"sign-form" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :class=>"sign-form" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", :class=>"sign-btn" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>


</div>